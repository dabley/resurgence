{% if post.picture %}
  <div class="fb-pic">
    <img src="{{ post.picture }}"/>
    {% if post.video %}
      <div class="fb-video">
        <a target="_blank" href="{{ post.video }}">See Video</a>
      </div>
    {% endif %}
  </div>
{% endif %}

{% if post.message %}
  <div class="fb-message">
    {{ post.message }}
  </div>
{% endif %}

{% if post.link %}
  <div class="fb-link">
    <a target="_blank" href="{{ post.link }}">Full post</a>
  </div>
{% endif %}

{% if should_display_time %}
  <div class="fb-time">
    {{ post.created_time }}
  </div>
{% endif %}
